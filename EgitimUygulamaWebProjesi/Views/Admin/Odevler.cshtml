@model List<EgitimUygulamaWebProjesi.Models.Odevler>
@{
    ViewBag.Title = "Ödevler";
    Layout = "~/Views/Shared/_OgretmenLayout.cshtml";
}

<h2 class="mb-4">Yüklenen Ödevler</h2>

<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Yüklenme Tarihi</th>
            <th>PDF</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Baslik</td>
                <td>@Model[i].Aciklama</td>
                <td>@Model[i].YuklenmeTarihi?.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a class="btn btn-sm btn-outline-danger" href="@Url.Content(Model[i].DosyaYolu)" target="_blank">
                        <i class="bi bi-file-earmark-pdf"></i> PDF
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("OdevSil", "Admin", new { id = Model[i].OdevId })" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-trash"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
