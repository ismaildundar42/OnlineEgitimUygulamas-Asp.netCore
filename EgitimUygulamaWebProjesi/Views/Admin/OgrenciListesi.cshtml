@model List<EgitimUygulamaWebProjesi.Models.Kullanicilar>
@{
    ViewBag.Title = "Öğrenci Listesi";
    Layout = "~/Views/Shared/_OgretmenLayout.cshtml";
}

<h2 class="mb-4">Kayıtlı Öğrenciler</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>E-posta</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].AdSoyad</td>
                <td>@Model[i].Eposta</td>
            </tr>
        }
    </tbody>
</table>
